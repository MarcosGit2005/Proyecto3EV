<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Una categoria">

        <ListPreference
            android:defaultValue="spanish"
            android:entries="@array/settings_language_values"
            android:entryValues="@array/settings_language_values"
            android:key="idioma"
            android:title="Idioma" />
        <EditTextPreference
            android:inputType="text"
            android:key="requestMapping"
            android:title="RequestMapping API: " />
        <EditTextPreference
            android:key="ruta_puerto"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Establece la ruta del servidor" />
        <PreferenceCategory android:title="Otra categoria">
            <androidx.preference.ListPreference
                android:dialogTitle="@string/settings_theme_dialog_title"
                android:entries="@array/settings_theme_entries"
                android:entryValues="@array/settings_theme_values"
                android:key="@string/settings_theme_key"
                android:title="@string/settings_theme_title" />
        </PreferenceCategory>

    </PreferenceCategory>
</androidx.preference.PreferenceScreen>