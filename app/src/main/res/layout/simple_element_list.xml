<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewPeli"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/tituloContenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Titulo"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewPeli"
        app:layout_constraintTop_toTopOf="@+id/imageViewPeli" />

    <TextView
        android:id="@+id/precioContenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00,00â‚¬"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPeli"
        app:layout_constraintStart_toStartOf="@+id/tituloContenido" />

</androidx.constraintlayout.widget.ConstraintLayout>