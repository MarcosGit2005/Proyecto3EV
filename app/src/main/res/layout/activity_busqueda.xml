<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <SearchView
        android:id="@+id/searchViewBusqueda"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPeliculas"
        android:layout_width="409dp"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@+id/searchViewBusqueda"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/botonPeliculasAlquiladas"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        app:icon="@drawable/peli"
        app:iconGravity="textStart"
        app:iconSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/carritoBoton"
        app:layout_constraintTop_toBottomOf="@+id/carritoBoton" />

    <Button
        android:id="@+id/carritoBoton"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        app:icon="@drawable/carrito"
        app:iconGravity="textStart"
        app:iconSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>